<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--投注展开区域-->
        <RelativeLayout
            android:id="@+id/cathectic_table_bg_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!--中间投注区域-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ll_right_bang"
                android:layout_toRightOf="@+id/ll_left_bang">

            </LinearLayout>

            <!--左榜-->
            <LinearLayout
                android:id="@+id/ll_left_bang"
                android:layout_width="55dp"
                android:layout_height="wrap_content">
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>

            </LinearLayout>
            <!--右榜-->
            <LinearLayout
                android:id="@+id/ll_right_bang"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
